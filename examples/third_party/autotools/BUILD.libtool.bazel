load("@rules_foreign_cc//foreign_cc:defs.bzl", "configure_make")

package(default_visibility = ["//visibility:public"])

filegroup(
    name = "all_srcs",
    srcs = glob(["**"]),
)

configure_make(
    name = "libtool",
    env = select({
        "@platforms//os:macos": {"AR": ""},
        "//conditions:default": {},
    }),
    install_prefix = "install",
    lib_source = ":all_srcs",
    out_binaries = [
        "libtool",
    ],
    out_data_dirs = ["share"],
    tools_deps = [
        "@m4",
    ],
)
