load("@rules_foreign_cc//foreign_cc:defs.bzl", "configure_make")

package(default_visibility = ["//visibility:public"])

filegroup(
    name = "all_srcs",
    srcs = glob(["**"]),
)

configure_make(
    name = "autoconf",
    env = select({
        "@platforms//os:macos": {
            "AR": "",
            "M4": "$$EXT_BUILD_DEPS/bin/m4/bin/m4",
            "PERL": "$$EXT_BUILD_ROOT$$/$(PERL)",
        },
        "//conditions:default": {
            "M4": "$$EXT_BUILD_DEPS/bin/m4/bin/m4",
            "PERL": "$$EXT_BUILD_ROOT$$/$(PERL)",
        },
    }),
    install_prefix = "/usr",
    lib_source = ":all_srcs",
    out_bin_dir = "usr/bin",
    out_binaries = [
        "autoconf",
        "autoheader",
        "autom4te",
        "autoreconf",
        "autoscan",
        "autoupdate",
        "ifnames",
    ],
    out_data_dirs = ["share"],
    toolchains = ["@rules_perl//:current_toolchain"],
    tools_deps = [
        "@m4",
    ],
    two_part_install = True,
)
