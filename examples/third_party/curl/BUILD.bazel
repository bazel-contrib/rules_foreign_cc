load("@bazel_skylib//rules:build_test.bzl", "build_test")
load("@rules_cc//cc:defs.bzl", "cc_test")

exports_files(
    [
        "BUILD.curl.bazel",
    ],
    visibility = ["//visibility:public"],
)

cc_test(
    name = "curl_test",
    srcs = ["curl_test.cc"],
    deps = [
        "@curl",
        "@openssl",
    ],
)

build_test(
    name = "build_test",
    targets = [
        "@curl//:curl",
    ],
)

test_suite(
    name = "test_suite",
    tests = [
        ":build_test",
        ":curl_test",
    ],
    visibility = ["//:__pkg__"],
)
