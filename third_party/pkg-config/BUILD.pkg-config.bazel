load("@rules_foreign_cc//foreign_cc:defs.bzl", "configure_make")

filegroup(
    name = "all_srcs",
    srcs = glob(["**"]),
)

configure_make(
    name = "pkgconfig",
    configure_in_place = True,
    configure_options = ["--with-internal-glib"],
    env = select({
        "@platforms//os:macos": {
            "AR": "",
        },
        "//conditions:default": {
        },
    }),
    lib_source = ":all_srcs",
    out_binaries = [
        "pkg-config",
    ],
    visibility = ["//visibility:public"],
)

filegroup(
    name = "pkg-config",
    srcs = [":pkgconfig"],
    output_group = "pkg-config",
    visibility = ["//visibility:public"],
)
